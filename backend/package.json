{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:integration": "jest test/integration --forceExit",
    "test:unit": "jest --testPathIgnorePatterns=test/integration --forceExit",
    "test:verbose": "jest --verbose --forceExit",
    "test:updateSnapshot": "jest --updateSnapshot",
    "test:failed": "jest --onlyFailures",
    "test:models": "jest models/*.test.js",
    "test:routes": "jest routes/**/*.test.js",
    "test:middleware": "jest middleware/*.test.js",
    "test:utils": "jest utils/*.test.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean-install": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "imageboard",
    "forum",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend for Conniption imageboard",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.812.0",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "isomorphic-dompurify": "^2.26.0",
    "multer": "^1.4.5-lts.2",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "pg": "^8.16.0",
    "socket.io": "^4.8.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
